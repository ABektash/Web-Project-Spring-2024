<!DOCTYPE html>
<html lang="<%= lang %>">
  <head>
    <title>Man Utd Shop</title>
    <!-- <link rel="stylesheet" href="MenShop.css"> -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/shop.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="/js/script.js"></script>

    <title>Shop</title>
  </head>

  <body>
    <!-- the navigation bar -->
    
<section id="header">
  <a id="navbar" href="/"><img src="/images/ManchesterUnitedLogo.png" width="80px" height="80px" class="Logo" alt="Team Logo"></a>
  <div>
      <ul id="navbar">
          <li><a  href="/"><%= __('home') %></a></li>
          <li><a class="active" href="/shop"><%= __('shop') %></a></li>
          <li><a href="/Tickets"><%= __('tickets') %></a></li>
          <li><a href="/Fixtures"><%= __('fixtures') %></a></li>
          <li><a href="/News"><%= __('news') %></a></li>
          <li><a href="/Players"><%= __('players') %></a></li>
          <li><a href="/about"><%= __('about') %></a></li>
          <li><a href="/ShoppingCart"><i style="color: white; cursor: pointer;" class="fa-solid fa-bag-shopping"></i></a></li>
         
          <% if (user) { %>
              <li><a href="/Profile">
                  <% if (user.image) { %>
                      <img src="/uploads/<%= user.image %>" width="30px" height="30px" alt="Profile Image">
                  <% } else { %>
                      <img src="/images/ProfileDefault.png" width="30px" height="30px" alt="Default Profile Image">
                  <% } %>
              </a></li>
          <% } else { %>
              <li><a href="/signUp"><img src="/images/ProfileDefault.png" width="30px" height="30px" alt="Profile Logo"></a></li>
          <% } %>
      </ul>
  </div>
</section>



    <section id="wallpaper" style=" background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('Images/celeb3.jpg');">
      <div class="wp-content">
        <h1>Unleash Your Passion</h1>
        <p>Find Your Fan Gear</p>
        <div>
          <button type="button" onclick="window.location.href='#cardSec';">
            Shop Now
          </button>
        </div>
      </div>
    </section>

    <!-- The three cards -->
    <section id="cardSec" style="  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('Images/locker2.jpeg');">
      <div class="cardContainer">
        <!-- first card -->
        <div class="shopCard" onclick="window.location.href='/MenShop';">
          <img src="Images/men.jpg" alt="Men's Collection" class="cardImage" />
          <div class="Text">
            <h1>Men</h1>
            <p>
              Unleash your passion for the Red Devils with our diverse range of
              men's apparel.
            </p>
          </div>
        </div>

        <!-- second card -->
        <div class="shopCard" onclick="window.location.href='/WomenShop';">
          <img
            src="Images/women.jpg"
            alt="Women's Collection"
            class="cardImage" />
          <div class="Text">
            <h1>Women</h1>
            <p>
              Stand out from the crowd with our vibrant and trendsetting women's
              merchandise from Manchester United.
            </p>
          </div>
        </div>

        <!-- Third card -->
        <div class="shopCard" onclick="window.location.href='/RetroShop';">
          <img
            src="Images/Retro.jpg"
            alt="Retro Collection"
            class="cardImage" />
          <div class="Text">
            <h1>Retro</h1>
            <p>
              Embrace the heritage of the Red Devils with our vintage-inspired
              retro collection from Manchester United.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- footer  -->
    <%- include('../partials/footer') %>
  </body>
</html>
