  <body>
    
<section id="header">
  <a id="navbar" href="/"><img src="/images/ManchesterUnitedLogo.png" width="80px" height="80px" class="Logo" alt="Team Logo"></a>
  <div>
      <ul id="navbar">
          <li><a href="/"><%= __('home') %></a></li>
          <li><a href="/shop"><%= __('shop') %></a></li>
          <li><a href="/Tickets"><%= __('tickets') %></a></li>
          <li><a href="/Fixtures"><%= __('fixtures') %></a></li>
          <li><a href="/News"><%= __('news') %></a></li>
          <li><a href="/Players"><%= __('players') %></a></li>
          <li><a href="/about"><%= __('about') %></a></li>
          <li><a href="/ShoppingCart"><i style="color: white; cursor: pointer;" class="fa-solid fa-bag-shopping"></i></a></li>
         
          <% if (user) { %>
              <li><a href="/Profile">
                  <% if (user.image) { %>
                      <img src="/uploads/<%= user.image %>" width="30px" height="30px" alt="Profile Image">
                  <% } else { %>
                      <img src="/images/ProfileDefault.png" width="30px" height="30px" alt="Default Profile Image">
                  <% } %>
              </a></li>
          <% } else { %>
              <li><a class = "active" href="/signUp"><img src="/images/ProfileDefault.png" width="30px" height="30px" alt="Profile Logo"></a></li>
          <% } %>
      </ul>
  </div>
</section>

    <form
      id="signUpForm"
      name="signUpForm"
      action="/SignUp"
      method="POST"
      enctype="multipart/form-data">
      <h2>SignUp</h2>
      <div class="row">
        <label>Full Name</label>
        <input type="text" name="name" />
        <div class="error" id="nameErr"><%= errors.name || '' %></div>
      </div>
      <div class="row">
        <label>Email Address</label>
        <input type="text" name="email" />
        <div class="error" id="emailErr"><%= errors.email || '' %></div>
      </div>
      <div class="row">
        <label>Password</label>
        <input type="password" name="password" />
        <div class="error" id="passwordErr"><%= errors.password || '' %></div>
      </div>

      <div class="row">
        <label>Confirm Password</label>
        <input type="password" name="confpassword" />
        <div class="error" id="confpassErr"><%= errors.confpassword || '' %></div>
      </div>

      <!-- <div class="row">
        <div class="DateOfBirth">
          <label for="day">Day</label>
          <input type="number" id="day" name="day" min="1" max="31" size="2" />
        </div>

        <div class="DateOfBirth">
          <label for="month">Month</label>
          <input type="number" id="month" name="month" min="1" max="12" size="2" />
        </div>

        <div class="DateOfBirth">
          <label for="year">Year</label>
          <input type="number" id="year" name="year" min="1900" max="2024" size="4" />
        </div>
        <div class="error"><%= errors.dob || '' %></div>
      </div> -->

      <div class="row">
        <label>Date</label>
        <input type="date" name="birthdate"/>
        <div class="error" id="dateErr"><%=errors.birthdate %></div>
      </div>

      <div class="row">
        <label>Gender</label>
        <div class="radio-group">
          <label class="radio-button"
            ><input type="radio" name="gender" value="male" /> Male <span></span
          ></label>
          <label class="radio-button"
            ><input type="radio" name="gender" value="female" /> Female
            <span></span
          ></label>
        </div>
  
      </div>
      <div class="error" id="genderErr" style="margin-bottom: 10px;"><%= errors.gender || '' %></div>
      <div class="row">
        <label>Upload Image (Optional)</label>
        <input type="file" name="image" accept="image/*">
        <div class="error-message" id="image-error" style="color: red;"><%= errors.image || '' %></div>
      </div>
      <div class="row">
        <input type="submit" value="Register" />
      </div>
     
      <div>
        <p class="signupLoginText">Have an account?</p>
        <a href="/Login">Login</a>
      </div>
    </form>

    <%- include('../partials/footer') %>
  </body>
</html>
