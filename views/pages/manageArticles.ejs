<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/adminStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="/js/adminScript.js"></script>
    <title>Manage Articles</title>
</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="/dashboard" class="brand">
            <img src="images/manu.png" alt="Admin Image">
            <span class="text">Welcome admin!</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/manageProducts">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="text">Manage Products</span>
                </a>
            </li>
            <li>
                <a href="/manageUsers">
                    <i class='bx bxs-group'></i>
                    <span class="text">Manage Users</span>
                </a>
            </li>
            <li>
                <a href="/manageTickets">
                    <i class='bx bxs-dollar-circle'></i>
                    <span class="text">Tickets</span>
                </a>
            </li>
            <li class="active">
                <a href="/manageArticles">
                    <i class='bx bxs-news'></i>
                    <span class="text">Manage Articles</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/logout" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <%- include('../partials/nav', { user: admin }) %>
       
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Articles</h1>
                    <ul class="pageSub">
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="/addArticle">Add article</a>
                        </li>
                    </ul>
                </div>
            </div>
        
            <div id="modal-Id-articles" class="modal">
                <span onclick="document.getElementById('modal-Id-articles').style.display='none'" class="close" title="Close Modal">Ã—</span>
                <form class="modal-content">
                    <div class="container">
                        <h1>Delete Item</h1>
                        <p>Are you sure you want to delete this Item?</p>
                        <div class="clearfix">
                            <button type="button" onclick="document.getElementById('modal-Id-articles').style.display='none'" class="cancelbtn">Cancel</button>
                            <button type="button" id="confirmDeleteBtn" class="deletebtn">Delete</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Articles</h3>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Data</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>         
                        </thead> 
                        <tbody>
                            <% articles.forEach(article => { %>
                                <tr>
                                    <td class="pname"><%= article.title %></td>
                                    <td class="prim"><img src="/uploads/<%= article.articleImg %>" alt="Article Image"></td>
                                    <td class="pdate"><%= new Date(article.date).toLocaleDateString() %></td>
                                    <td class="de" id="delete">
                                        <a onclick="openDeleteModal('<%= article._id %>')">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                    <td class="de" id="edit">
                                        <a href="/manageArticles/edit/<%= article._id %>">
                                            <i class="fa-solid fa-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </section>

    <script>
        let articleIdToDelete = '';

        function openDeleteModal(articleId) {
            articleIdToDelete = articleId;
            document.getElementById('modal-Id-articles').style.display = 'block';
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
            try {
                const response = await fetch(`/manageArticles/delete/${articleIdToDelete}`, {
                    method: 'DELETE',
                });
                const result = await response.json();
                if (response.status === 200) {
                    window.location.reload();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the article');
            }
        });
    </script>
</body>
</html>
