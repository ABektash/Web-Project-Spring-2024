<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
	<link rel="stylesheet" href="/css/adminStyle.css">
    <link rel="stylesheet" href="/css/Products.css">
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    
    <script src="Products.js"></script>
</head>

<body >
	
	<%- include('../partials/sidebar') %>



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
	<%- include('../partials/nav') %>
		<main>
            
            <div class="head-title">
                <div class="left">
                    <h1>Add product</h1>
                    <ul class="pageSub">
                        
                        <li><i class='bx bx-chevron-right' ></i></li>
                        <li>
                            <a class="active" href="manageProducts.html">Back</a>
                        </li>
                    </ul>
                </div>
               
            </div>
		</main>
	</section>
	<script src="script.js"></script>

    <!-- productForm -->
	<form id="productForm" name="productForm"  method="POST" action="/Products">
		<h2 id="addH2">Add Product</h2>
		<div class="productRow">
			<label>Name Of Product</label>
			<input type="text" name="name" placeholder="Enter product name" />
			<div class="error" id="nameErr">
				<%= errors.name || "" %>
			</div>
		</div>
		<div class="productRow">
			<label>Price</label>
			<div class="price-input">
				<input type="text" name="price" placeholder="Enter product price" />
				<span class="currency">$</span>
			</div>
			<div class="error" id="priceErr">
				<%= errors.price || ""%>
			</div>
		</div>
		<div class="productRow">
			<label>Number of Available Pieces</label>
			<input  type="number" name="quantity" placeholder="Enter quantity available" />
			<div class="error" id="quantityErr">
				<%= errors.quantity || "" %>
			</div>
		</div>
	
		<div class="productRow">
			<label>Select Size</label>
			<select id="SelectSize" name="size" placeholder="Select product size">
				<option value="selectSize">Select Size</option>
				<option value="S">S</option>
				<option value="M">M</option>
				<option value="L">L</option>
				<option value="XL">XL</option>
				<option value="XXL">XXL</option>
			</select>
			<div class="error" id="sizeErr">
				<%= errors.size || ""%>
			</div>
		</div>
	
		<div class="productRow">
			<label>Upload Image</label>
			<input type="file" name="productImg" accept="image/*" placeholder="Upload product image" />
			<div class="error" id="imageErr">
				<%= errors.productImg || "" %>
			</div>
		</div>
		
		<div class="productRow">
			<input type="submit" class="submit-btn" value="Add Product" id="subbtnID" />
			<% if (!(Object.keys(errors).length > 0 || get)) { %>
				<div id="success">
					<p style="color: green; margin-top: 11px;">Successful</p>
				</div>
			<% } %>
		</div>
</form>
	

</html>