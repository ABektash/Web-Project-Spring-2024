<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/adminStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="/js/adminScript.js"></script>
    <title>Manage Tickets</title>
</head>

<body>


    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="/dashboard" class="brand">
            <img src="img/manu.png" alt="Admin Image">
            <span class="text">Welcome admin!</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/manageProducts">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="text">Manage Products</span>
                </a>
            </li>
            <li>
                <a href="/manageUsers">
                    <i class='bx bxs-group'></i>
                    <span class="text">Manage Users</span>
                </a>
            </li>
            <li class="active">
                <a href="/manageTickets">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Tickets</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/SignIn" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>


    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <%- include('../partials/nav') %>
            <main>
                <div class="head-title">
                    <div class="left">
                        <h1>Manage tickets</h1>
                        <ul class="pageSub">
                            <li><i class='bx bx-chevron-right'></i></li>
                            <li>
                                <a class="active" href="/addTicket">Add ticket</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="modal-Id-tickets" class="modal">
                    <span onclick="document.getElementById('modal-Id-tickets').style.display='none'" class="close"
                        title="Close Modal">Ã—</span>
                    <form class="modal-content">
                        <div class="container">
                            <h1>Delete Ticket</h1>
                            <p>Are you sure you want to delete this Ticket?</p>
                            <div class="clearfix">
                                <button type="button"
                                    onclick="document.getElementById('modal-Id-tickets').style.display='none'"
                                    class="cancelbtn">Cancel</button>
                                <button type="button"
                                    onclick="document.getElementById('modal-Id-tickets').style.display='none'"
                                    class="deletebtn">Delete</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-data">
                    <div class="order">
                        <div class="head">
                            <h3>Tickets</h3>
                        </div>
                        <table>
                            <thead>
                                <tr>
                                    <th>Match</th>
                                    <th>Date</th>
                                    <th>Stadium</th>
                                    <th>Price</th>
                                    <th>Ticket Type</th>
                                    <th>Delete</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tickets.forEach(ticket=> { %>
                                    <tr>
                                        <td>
                                            <%= ticket.match %>
                                        </td>
                                        <td>
                                            <%= ticket.date.toDateString() %>
                                        </td>
                                        <td>
                                            <%= ticket.stadium %>
                                        </td>
                                        <td>$<%= ticket.price %>
                                        </td>
                                        <td>
                                            <%= ticket.ticketType.toUpperCase() %>
                                        </td>
                                        <td class="de" id="delete"><a
                                                onclick="document.getElementById('modal-Id-tickets').style.display='block'"><i
                                                    class="fa-solid fa-trash"></i></a></td>
                                        <td class="de" id="edit"><a href="/manageTickets/edit/<%= ticket._id %>"><i
                                                    class="fa-solid fa-pencil"></i></a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
    </section>



</body>

</html>